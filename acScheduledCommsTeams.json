{
    "type": "AdaptiveCard",
    "version": "1.4",
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "id": "acPreCommsTeams",
    "body": [
        {
            "type": "Container",
            "items": [
                {
                    "type": "Image",
                    "url": "https://github.com/DevHaydon/GC-Logos/blob/main/ITServiceDesk.png?raw=true",
                    "altText": "Ground Control IT Logo",
                    "horizontalAlignment": "Center"
                }
            ],
            "minHeight": "0px",
            "padding": "Large",
            "style": "emphasis",
            "horizontalAlignment": "Center",
            "spacing": "None"
        },
        {
            "type": "Container",
            "id": "acContTitle",
            "items": [
                {
                    "type": "TextBlock",
                    "size": "ExtraLarge",
                    "weight": "Bolder",
                    "wrap": true,
                    "id": "acTxtTitle",
                    "horizontalAlignment": "Center",
                    "separator": true,
                    "spacing": "Medium",
                    "text": "${$root.acTitle}"
                },
                {
                    "type": "ColumnSet",
                    "columns": [
                        {
                            "type": "Column",
                            "width": 60,
                            "items": [
                                {
                                    "type": "TextBlock",
                                    "text": "${$root.acSubtitle}",
                                    "wrap": true,
                                    "isSubtle": true,
                                    "spacing": "Large",
                                    "horizontalAlignment": "Center",
                                    "size": "Large"
                                }
                            ],
                            "padding": "Small"
                        },
                        {
                            "type": "Column",
                            "width": 40,
                            "items": [
                                {
                                    "type": "Image",
                                    "url": "@variables('varTemplate')?['acImgLink",
                                    "separator": true,
                                    "spacing": "Medium"
                                }
                            ],
                            "padding": "Small"
                        }
                    ],
                    "style": "default",
                    "padding": "None"
                }
            ],
            "style": "default",
            "padding": "None"
        },
        {
            "type": "Container",
            "padding": "Small",
            "id": "acBodyText",
            "horizontalAlignment": "Center",
            "items": [
                {
                    "type": "TextBlock",
                    "text": "${$root.acMain}",
                    "size": "Large",
                    "weight": "Bolder",
                    "horizontalAlignment": "Center"
                },
                {
                    "type": "TextBlock",
                    "text": "${$root.acHeader1}",
                    "size": "Medium",
                    "weight": "Bolder",
                    "horizontalAlignment": "Center",
                    "id": "amTextRemote"
                },
                {
                    "type": "TextBlock",
                    "text": "${$root.acHeader2}",
                    "size": "Medium",
                    "weight": "Bolder",
                    "horizontalAlignment": "Center",
                    "id": "amTextSecurity"
                }
            ],
            "verticalContentAlignment": "Center"
        },
        {
            "type": "TextBlock",
            "text": "${$root.acText3}",
            "size": "Medium",
            "isSubtle": true,
            "horizontalAlignment": "Center",
            "wrap": true,
            "spacing": "None",
            "weight": "Lighter"
        },
        {
            "type": "Container",
            "id": "1861bdd4-8e31-07f6-721c-3c639d55352e",
            "padding": "None",
            "items": [
                {
                    "type": "TextBlock",
                    "text": "${$root.acHeader3}",
                    "size": "Medium",
                    "weight": "Bolder",
                    "wrap": true,
                    "horizontalAlignment": "Center",
                    "id": "amTextPerformance"
                },
                {
                    "type": "TextBlock",
                    "text": "${$root.acText3}",
                    "size": "Medium",
                    "isSubtle": true,
                    "horizontalAlignment": "Center",
                    "wrap": true,
                    "spacing": "None",
                    "weight": "Lighter"
                },
                {
                    "type": "Container",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "${$root.acHeader3}",
                            "size": "Medium",
                            "weight": "Bolder",
                            "wrap": true,
                            "horizontalAlignment": "Center",
                            "id": "8265efaf-6d12-cf22-18aa-90875228a3cf"
                        },
                        {
                            "type": "ColumnSet",
                            "columns": [
                                {
                                    "type": "Column",
                                    "width": 80,
                                    "items": [
                                        {
                                            "type": "TextBlock",
                                            "text": "${$root.acText1}",
                                            "size": "Medium",
                                            "isSubtle": true,
                                            "horizontalAlignment": "Center",
                                            "wrap": true,
                                            "spacing": "None",
                                            "id": "amTextConnectivity",
                                            "weight": "Lighter"
                                        }
                                    ],
                                    "selectAction": {
                                        "type": "Action.OpenUrl",
                                        "url": "https://www.google.com",
                                        "title": "How To?"
                                    },
                                    "padding": "None"
                                },
                                {
                                    "type": "Column",
                                    "width": 20,
                                    "items": [
                                        {
                                            "type": "ActionSet",
                                            "actions": [
                                                {
                                                    "type": "Action.OpenUrl",
                                                    "title": "How to Update"
                                                }
                                            ]
                                        }
                                    ],
                                    "padding": "None"
                                }
                            ],
                            "padding": "None"
                        }
                    ],
                    "padding": "None"
                }
            ]
        },
        {
            "type": "Container",
            "id": "acContCTA",
            "padding": "None",
            "items": [
                {
                    "type": "TextBlock",
                    "id": "acTextCTA",
                    "text": "${$root.acTextCTA}",
                    "wrap": true,
                    "horizontalAlignment": "Center",
                    "isSubtle": true,
                    "size": "Large",
                    "weight": "Bolder",
                    "color": "Good"
                },
                {
                    "type": "TextBlock",
                    "id": "acTextCTABody",
                    "text": "${$root.acTextBodyCTA}",
                    "wrap": true,
                    "horizontalAlignment": "Center",
                    "color": "Good",
                    "size": "Medium",
                    "isSubtle": true
                }
            ],
            "style": "emphasis",
            "separator": true
        },
        {
            "type": "Container",
            "id": "acFooter",
            "padding": "None",
            "items": [
                {
                    "type": "TextBlock",
                    "id": "acTextFooter",
                    "text": "IT Service Desk Notification",
                    "wrap": true,
                    "horizontalAlignment": "Center",
                    "isSubtle": true,
                    "size": "Medium",
                    "weight": "Bolder"
                }
            ],
            "style": "emphasis",
            "separator": true
        }
    ],
    "padding": "None"
}