{
    "type": "AdaptiveCard",
    "version": "1.0",
    "originator": "24b1d63e-e7ba-4fd9-aaa2-8068c6c11141",
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "id": "acScheduledCommsOutlook",
    "body": [
        {
            "type": "Container",
            "items": [
                {
                    "type": "Image",
                    "url": "https://github.com/DevHaydon/GC-Logos/blob/main/ITServiceDesk.png?raw=true",
                    "altText": "Ground Control IT Logo",
                    "horizontalAlignment": "Center"
                }
            ],
            "minHeight": "0px",
            "padding": "Large",
            "style": "emphasis",
            "horizontalAlignment": "Center",
            "spacing": "None"
        },
        {
            "type": "Container",
            "id": "acContTitle",
            "items": [
                {
                    "type": "TextBlock",
                    "size": "ExtraLarge",
                    "weight": "Bolder",
                    "wrap": true,
                    "id": "acTxtTitle",
                    "horizontalAlignment": "Center",
                    "separator": true,
                    "spacing": "Medium",
                    "text": "${$root.acTitle}"
                },
                {
                    "type": "ColumnSet",
                    "columns": [
                        {
                            "type": "Column",
                            "width": 60,
                            "items": [
                                {
                                    "type": "TextBlock",
                                    "text": "${$root.acSubtitle}",
                                    "wrap": true,
                                    "isSubtle": true,
                                    "spacing": "Large",
                                    "horizontalAlignment": "Center",
                                    "size": "Large"
                                }
                            ],
                            "padding": "Small"
                        },
                        {
                            "type": "Column",
                            "width": 40,
                            "items": [
                                {
                                    "type": "Image",
                                    "url": "${$root.acImgLink}",
                                    "separator": true,
                                    "spacing": "Medium"
                                }
                            ],
                            "padding": "Small"
                        }
                    ],
                    "style": "default",
                    "padding": "None"
                }
            ],
            "style": "default",
            "padding": "None"
        },
        {
            "type": "Container",
            "padding": "Small",
            "id": "acBodyText",
            "horizontalAlignment": "Center",
            "items": [
                {
                    "type": "TextBlock",
                    "text": "${$root.acMain}",
                    "size": "Large",
                    "weight": "Bolder",
                    "horizontalAlignment": "Center"
                },
                {
                    "type": "TextBlock",
                    "text": "${$root.acHeader1}",
                    "size": "Medium",
                    "weight": "Bolder",
                    "horizontalAlignment": "Center",
                    "id": "amTextRemote"
                },
                {
                    "type": "TextBlock",
                    "text": "${$root.acHeader2}",
                    "size": "Medium",
                    "weight": "Bolder",
                    "horizontalAlignment": "Center",
                    "id": "amTextSecurity"
                }
            ],
            "verticalContentAlignment": "Center",
            "separator": true
        },
        {
            "type": "TextBlock",
            "text": "${$root.acText2}",
            "size": "Medium",
            "isSubtle": true,
            "horizontalAlignment": "Center",
            "wrap": true,
            "spacing": "None",
            "weight": "Lighter"
        },
        {
            "type": "Container",
            "id": "1861bdd4-8e31-07f6-721c-3c639d55352e",
            "padding": "None",
            "items": [
                {
                    "type": "TextBlock",
                    "text": "${$root.acHeader3}",
                    "size": "Medium",
                    "weight": "Bolder",
                    "wrap": true,
                    "horizontalAlignment": "Center",
                    "id": "amTextPerformance"
                },
                {
                    "type": "TextBlock",
                    "text": "${$root.acText3}",
                    "size": "Medium",
                    "isSubtle": true,
                    "horizontalAlignment": "Center",
                    "wrap": true,
                    "weight": "Lighter"
                },
                {
                    "type": "TextBlock",
                    "text": "${$root.acText4}",
                    "size": "Medium",
                    "isSubtle": true,
                    "horizontalAlignment": "Center",
                    "wrap": true,
                    "weight": "Lighter"
                },
                {
                    "type": "Container",
                    "items": [
                        {
                            "type": "ColumnSet",
                            "columns": [
                                {
                                    "type": "Column",
                                    "width": 80,
                                    "items": [
                                        {
                                            "type": "TextBlock",
                                            "text": "${$root.acText5}",
                                            "size": "Medium",
                                            "isSubtle": true,
                                            "horizontalAlignment": "Center",
                                            "wrap": true,
                                            "spacing": "None",
                                            "id": "amTextConnectivity",
                                            "weight": "Lighter"
                                        }
                                    ],
                                    "padding": "None"
                                },
                                {
                                    "type": "Column",
                                    "width": 20,
                                    "items": [
                                        {
                                            "type": "ActionSet",
                                            "actions": [
                                                {
                                                    "type": "Action.OpenUrl",
                                                    "title": "${$root.acUpdateText}",
                                                    "url": "${$root.acUpdateLink}"
                                                }
                                            ]
                                        }
                                    ]
                                }
                            ]
                        }
                    ]
                }
            ],
            "separator": true
        },
        {
            "type": "Container",
            "id": "acContCTA",
            "padding": "None",
            "items": [
                {
                    "type": "TextBlock",
                    "id": "acTextCTA",
                    "text": "${$root.acTextCTA}",
                    "wrap": true,
                    "horizontalAlignment": "Center",
                    "isSubtle": true,
                    "size": "Medium",
                    "weight": "Bolder"
                },
                {
                    "type": "ActionSet",
                    "id": "acCTAButton",
                    "actions": [
                        {
                            "type": "Action.OpenUrl",
                            "id": "acCTA",
                            "title": "Comment on Jira Ticket",
                            "url": "${$root.acCTALink}",
                            "style": "positive",
                            "isPrimary": true
                        }
                    ],
                    "horizontalAlignment": "Center"
                }
            ],
            "style": "emphasis",
            "separator": true
        },
        {
            "type": "Container",
            "id": "acFooter",
            "padding": "None",
            "items": [
                {
                    "type": "TextBlock",
                    "id": "acTextFooter",
                    "text": "IT Service Desk Notification",
                    "wrap": true,
                    "horizontalAlignment": "Center",
                    "isSubtle": true,
                    "size": "Medium",
                    "weight": "Bolder"
                }
            ],
            "style": "emphasis",
            "separator": true
        }
    ],
    "padding": "Default"
}