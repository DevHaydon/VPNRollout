    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "id": "acDayBeforeOutlook",
    "body": [
        {
            "type": "Container",
            "id": "acContHeader",
            "items": [
                {
                    "type": "Image",
                    "url": "https://github.com/DevHaydon/GC-Logos/blob/main/ITServiceDesk.png?raw=true",
                    "altText": "Ground Control IT Logo",
                    "horizontalAlignment": "Center"
                }
            ],
            "minHeight": "0px",
            "style": "emphasis",
            "horizontalAlignment": "Center",
            "padding": "Large"
        },
        {
            "type": "Container",
            "id": "acContTitle",
            "items": [
                {
                    "type": "TextBlock",
                    "size": "ExtraLarge",
                    "weight": "Bolder",
                    "wrap": true,
                    "id": "acTxtTitle",
                    "horizontalAlignment": "Center",
                    "separator": true,
                    "padding": "Medium",
                    "text": "${$root.acTitle}"
                },
                {
                    "type": "ColumnSet",
                    "columns": [
                        {
                            "type": "Column",
                            "width": 60,
                            "items": [
                                {
                                    "type": "TextBlock",
                                    "text": "${$root.acSubtitle",
                                    "wrap": true,
                                    "isSubtle": true,
                                    "padding": "Large",
                                    "horizontalAlignment": "Center",
                                    "size": "Large",
                                    "weight": "Bolder"
                                }
                            ],
                            "padding": "Small",
                            "verticalContentAlignment": "Center"
                        },
                        {
                            "type": "Column",
                            "width": 40,
                            "items": [
                                {
                                    "type": "Image",
                                    "url": "https://github.com/DevHaydon/GC-Logos/blob/main/PaloAlto.jpg?raw=true",
                                    "separator": true,
                                    "padding": "Medium"
                                }
                            ],
                            "padding": "Small"
                        }
                    ],
                    "style": "default"
                }
            ],
            "style": "default"
        },
        {
            "type": "Container",
            "padding": "Small",
            "id": "acContBody",
            "horizontalAlignment": "Center",
            "verticalContentAlignment": "Center",
            "items": [
                {
                    "type": "Container",
                    "id": "acContBody1",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "Here's everything you need to know about the install",
                            "size": "Large",
                            "weight": "Bolder",
                            "horizontalAlignment": "Center",
                            "wrap": true
                        },
                        {
                            "type": "TextBlock",
                            "text": "As mentioned everything will be done remotely, so all we ask is that all Windows Updates have been done and has restarted if required.",
                            "size": "Medium",
                            "horizontalAlignment": "Center",
                            "wrap": true,
                            "weight": "Default",
                            "fontType": "Default"
                        },
                        {
                            "type": "TextBlock",
                            "text": "Your device doesn't have to be left on over night for the installation to take place, so switch it off tonight and let the installation take place when you turn it on in the morning.",
                            "size": "Medium",
                            "weight": "Lighter",
                            "horizontalAlignment": "Center",
                            "wrap": true,
                            "padding": "Small",
                            "color": "Default",
                            "isSubtle": true
                        }
                    ]
                },
                {
                    "type": "Container",
                    "id": "acContBody2",
                    "items": [
                        {
                            "type": "ColumnSet",
                            "id": "acColBody1",
                            "columns": [
                                {
                                    "type": "Column",
                                    "items": [
                                        {
                                            "type": "Image",
                                            "id": "ImgScreenshot1",
                                            "url": "https://github.com/DevHaydon/VPNRollout/blob/master/Screenshot1.jpg?raw=true"
                                        }
                                    ],
                                    "width": 40
                                },
                                {
                                    "type": "Column",
                                    "width": 70,
                                    "items": [
                                        {
                                            "type": "TextBlock",
                                            "text": "Your device will silently download and install updates in the background, and you'll receive a notification to restart once it's done. It's that simple!",
                                            "size": "Medium",
                                            "wrap": true,
                                            "horizontalAlignment": "Center",
                                            "id": "amTextPerformance"
                                        },
                                        {
                                            "type": "TextBlock",
                                            "text": "Things to note after:",
                                            "size": "Medium",
                                            "weight": "Bolder",
                                            "wrap": true,
                                            "horizontalAlignment": "Center",
                                            "id": "859435d0-7289-3c5d-be2d-d6d3b5a572d2"
                                        },
                                        {
                                            "type": "TextBlock",
                                            "text": "Wait for \"Connected\" to appear below the password input box when logging into your laptop. This ensures the login script runs, checks your ICE2 version, and verifies network locations' availability before entering your password.",
                                            "size": "Medium",
                                            "wrap": true,
                                            "horizontalAlignment": "Center",
                                            "id": "7c84a915-7511-518c-61ed-6c4f7c98774f"
                                        }
                                    ]
                                }
                            ]
                        }
                    ]
                },
                {
                    "type": "Container",
                    "id": "acContBody3",
                    "items": [
                        {
                            "type": "ColumnSet",
                            "id": "acColBody2",
                            "columns": [
                                {
                                    "type": "Column",
                                    "id": "e6e85b57-8661-a790-0ca5-74c60ad52059",
                                    "width": 50,
                                    "items": [
                                        {
                                            "type": "TextBlock",
                                            "text": "You might encounter a popup asking for your Microsoft details. Please log in using your email and password, and you may be prompted for your MFA code from the 'Authenticator App.' ",
                                            "size": "Medium",
                                            "wrap": true,
                                            "horizontalAlignment": "Center",
                                            "id": "5ffbbb05-3281-cfba-2817-f8ccb50cdae3"
                                        },
                                        {
                                            "type": "TextBlock",
                                            "text": "Once successful, a webpage like the example shown will open automatically to confirm the VPN connection upon logging in.",
                                            "size": "Medium",
                                            "wrap": true,
                                            "horizontalAlignment": "Center",
                                            "id": "147414cb-ece4-af9e-9363-211fbfc3558a"
                                        }
                                    ]
                                },
                                {
                                    "type": "Column",
                                    "items": [
                                        {
                                            "type": "Image",
                                            "id": "imgScreenshot2",
                                            "url": "https://github.com/DevHaydon/VPNRollout/blob/master/Screenshot2.png?raw=true",
                                            "horizontalAlignment": "Right"
                                        }
                                    ],
                                    "width": 40
                                }
                            ]
                        }
                    ]
                }
            ],
            "separator": true
        },
        {
            "type": "Container",
            "id": "amConToggle",
            "items": [
                {
                    "type": "ActionSet",
                    "id": "amToggle",
                    "actions": [
                        {
                            "type": "Action.ShowCard",
                            "title": "Contact Service Desk",
