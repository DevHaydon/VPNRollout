                                "type": "AdaptiveCard",
                                "$schema": "http://adaptivecards.io/schemas/adaptive-card.json"
                            }
                        },
                        {
                            "type": "Action.OpenUrl",
                            "id": "amBtnMoreInfo",
                            "title": "More Information",
                            "url": "https://groundcontrol.atlassian.net/wiki/spaces/UKB/pages/605782101/Palo+Alto+VPN",
                            "style": "positive"
                        }
                    ],
                    "separator": true
                },
                {
                    "type": "Container",
                    "items": [
                        {
                            "type": "Input.Text",
                            "placeholder": "Placeholder text",
                            "id": "acComment",
                            "isVisible": false,
                            "inlineAction": {
                                "type": "Action.Submit",
                                "id": "acSubmit",
                                "associatedInputs": "auto"
                            },
                            "isMultiline": true
                        }
                    ]
                }
            ]
        },
        {
            "type": "Container",
            "id": "acFooter",
            "padding": "None",
            "items": [
                {
                    "type": "TextBlock",
                    "id": "acTextFooter",
                    "text": "IT Service Desk Notification",
                    "wrap": true,
                    "horizontalAlignment": "Center",
                    "isSubtle": true,
                    "size": "Medium",
                    "weight": "Bolder"
                }
            ],
            "style": "emphasis",
            "separator": true
        }
    ]
}