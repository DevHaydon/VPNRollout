{
    "type": "AdaptiveCard",
    "version": "1.0",
    "originator": "24b1d63e-e7ba-4fd9-aaa2-8068c6c11141",
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "body": [
        {
            "type": "Container",
            "items": [
                {
                    "type": "Image",
                    "url": "https://github.com/DevHaydon/GC-Logos/blob/main/ITServiceDesk.png?raw=true",
                    "altText": "Ground Control IT Logo",
                    "horizontalAlignment": "Center",
                    "padding": "Large"
                }
            ],
            "minHeight": "0px",
            "style": "emphasis",
            "padding": "Large"
        },
        {
            "type": "Container",
            "id": "acContTitle",
            "items": [
                {
                    "type": "TextBlock",
                    "size": "ExtraLarge",
                    "weight": "Bolder",
                    "wrap": true,
                    "id": "acTxtTitle",
                    "horizontalAlignment": "Center",
                    "separator": true,
                    "spacing": "Medium",
                    "text": "We're excited to inform you that the VPN has been successfully installed on your device!"
                },
                {
                    "type": "Container",
                    "id": "amContConnect",
                    "spacing": "None",
                    "isVisible": false,
                    "padding": "None"
                }
            ],
            "padding": "None"
        },
        {
            "type": "Container",
            "spacing": "Small",
            "id": "acBodyText",
            "items": [
                {
                    "type": "TextBlock",
                    "text": "What to expect now:",
                    "size": "Large",
                    "weight": "Bolder",
                    "horizontalAlignment": "Center"
                },
                {
                    "type": "TextBlock",
                    "text": "Direct Access to ICe2",
                    "size": "Medium",
                    "weight": "Bolder",
                    "horizontalAlignment": "Center"
                },
                {
                    "type": "TextBlock",
                    "text": "Direct Access to Shared Folders",
                    "size": "Medium",
                    "weight": "Bolder",
                    "horizontalAlignment": "Center",
                    "id": "amTextSecurity"
                },
                {
                    "type": "TextBlock",
                    "text": "Enhanced Security",
                    "size": "Medium",
                    "weight": "Bolder",
                    "wrap": true,
                    "horizontalAlignment": "Center",
                    "id": "amTextPerformance"
                }
            ],
            "verticalContentAlignment": "Center",
            "padding": "None"
        },
        {
            "type": "Container",
            "id": "acContCTA",
            "spacing": "None",
            "items": [
                {
                    "type": "TextBlock",
                    "id": "acTextCTABody",
                    "wrap": true,
                    "horizontalAlignment": "Center",
                    "size": "Medium",
                    "isSubtle": true
                },
                {
                    "type": "TextBlock",
                    "id": "acTextCTA",
                    "text": "If you have any immediate concerns or questions, please feel free to contact us.",
                    "wrap": true,
                    "horizontalAlignment": "Center",
                    "isSubtle": true,
                    "size": "Large",
                    "weight": "Bolder"
                },
                {
                    "type": "Container",
                    "id": "acFooter",
                    "spacing": "None",
                    "items": [
                        {
                            "type": "ColumnSet",
                            "columns": [
                                {
                                    "type": "Column",
                                    "width": "stretch",
                                    "horizontalAlignment": "Center",
                                    "padding": "None"
                                },
                                {
                                    "type": "Column",
                                    "width": "stretch",
                                    "items": [
                                        {
                                            "type": "ActionSet",
                                            "id": "amToggle",
                                            "actions": [
                                                {
                                                    "type": "Action.OpenUrl",
                                                    "id": "amMoreinfo",
                                                    "url": "@{outputs('Compose')}",
                                                    "title": "Contact Us",
                                                    "style": "positive",
                                                    "isPrimary": true
                                                }
                                            ],
                                            "separator": true,
                                            "horizontalAlignment": "Center"
                                        }
                                    ],
                                    "padding": "None"
                                },
                                {
                                    "type": "Column",
                                    "width": "stretch",
                                    "padding": "None"
                                }
                            ],
                            "horizontalAlignment": "Center",
                            "padding": "None"
                        },
                        {
                            "type": "TextBlock",
                            "id": "acTextFooter",
                            "text": "IT Service Desk Notification",
                            "wrap": true,
                            "horizontalAlignment": "Center",
                            "isSubtle": true,
                            "size": "Medium",
                            "weight": "Bolder"
                        }
                    ],
                    "style": "emphasis",
                    "separator": true,
                    "padding": "None"
                }
            ],
            "style": "emphasis",
            "separator": true,
            "padding": "None"
        }
    ],
    "padding": "None"
}